{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": [
      "node", "mocha"
    ]
  },
  "exclude": [
    "test",
    "node_modules",
    "**/*.d.ts"
  ]
}
